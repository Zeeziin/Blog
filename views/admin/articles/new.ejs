<%-include ('../../partials/header') %>
<body>
    <%-include ('../../partials/navbar') %>
    <div class="container">
        <hr>
        <h2>Novo artigo</h2>
        <br>
        <form action="/articles/save" method="post">
            <input type="text" class="form-control" name="title" placeholder="Defina o tÃ­tulo do artigo">
            <br>
            <textarea name="body" class="form-control" placeholder="Escreva o artigo aqui!" id="article"></textarea>
            <br>
            <p>Categoria</p>
            <select name="category" class="form-control">
                <%categories.forEach(category=>{%>
                    <option value="<%=category.id%>"><%=category.title%></option>
                <%})%>
            </select>
            <br>
            <button class="btn btn-success">Cadastrar</button>
        </form>
    </div>
    <%-include ('../../partials/footer') %>
</body>
<script src="/tinymce/js/tinymce/tinymce.min.js"></script>
<script>
    tinymce.init({
        language: 'pt_BR',
        selector: '#article'
    });
</script>