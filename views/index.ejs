<%-include ('partials/header') %>
<body>
    <%-include ('partials/homenavbar') %>
    <div class="container">
        <div class="jumbotron">
            <h1 class="display-4">Olá, mundo!</h1>
            <p class="lead">Este é um simples blog do zeza</p>
            <hr class="my-4">
            <p>Descrição detalhada aqui!</p>
            <p class="lead">
              <a class="btn btn-primary btn-lg" href="/login" role="button">LOGAR</a>
            </p>
        </div>
        <hr>
        <%articles.forEach(article=>{%>
            <div class="card">
                <div class="card-header">
                    <h4><%=article.title%></h4>
                </div>
                <div class="card-body">
                    <input type="hidden" value="<%=article.id%>">
                    <a class="btn btn-success" href="/<%=article.slug%>">Ler artigo</a>
                </div>
            </div>
            <br>
        <%})%>
        <div class="row">
            <div class="col col-12">
                <a href="/articles/page/2" style="float: right;">Next>>>></a>
            </div>
        </div>
        <hr>
    </div>
</body>
<%-include ('partials/footer') %>